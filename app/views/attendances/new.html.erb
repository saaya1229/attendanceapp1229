<div class="container">
  <%= form_with(model: @attendance, url: attendances_path, method: 'post', local: true) do |f| %>
    <div>
      <%= f.label :title, 'タイトル' %>
    </div>
    <div>
      <%= f.text_field :title, class: 'text' %>
    </div>
    <div>
      <%= f.label :start_time, '出勤時間' %>
    </div>
    <div>
      <%= f.time_field :start_time, class: 'text' %>
    </div>
    <div>
      <%= f.label :end_time, '退勤時間' %>
    </div>
    <div>
      <%= f.time_field :end_time, class: 'text' %>
    </div>
    <div>
      <%= f.label :break_time, '休憩時間' %>
    </div>
    <div>
      <%= f.time_field :break_time, class: 'text' %>
    </div>
    <div>
      <%= f.label :content, '補足内容' %>
    </div>
    <div>
      <%= f.text_area :content %>
    </div>
    <%= f.submit '保存', class: 'btn-primary' %>
  <% end %>
</div>