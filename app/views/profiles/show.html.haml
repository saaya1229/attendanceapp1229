.container.profilePage
  .profilePage_user
    .profilePage_user_image
      = image_tag current_user.avatar_image
    .profilePage_user_basicInfo
      .profilePage_user_name
        .profilePage_user_displayName
          #{current_user.display_name}（#{current_user.age || '?歳'}・#{I18n.t("enum.jobs.#{current_user.job || 'unknown'}")}）
        .profilePage_user_actionButton
          = link_to 'Edit', edit_profile_path

  .tabs
    .tabs_item.active
      私の出退勤日一覧
  - current_user.attendances.each do |attendance|
    = render 'commons/attendance', attendance: attendance